#!/usr/bin/make -f

# export PYBUILD_BEFORE_TEST=cp -r {dir}/test {build_dir}
# export PYBUILD_AFTER_TEST=rm -rf {build_dir}/test

%:
	dh $@ --with python3,sphinxdoc --buildsystem=pybuild --fail-missing

override_dh_installinit:
	true

override_dh_auto_build:
	dh_auto_build
	PYTHONPATH=. sphinx-build -N -bman ./docs/source ./docs/build/man
